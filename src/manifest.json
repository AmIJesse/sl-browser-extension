{
  "name": "SimpleLogin | Your anti-spam superhero",
  "description": "Open source solution to protect your email inbox",
  "version": null,
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "permissions": ["activeTab", "storage"],
  "browser_action": {
    "default_title": "simplelogin-extension",
    "default_popup": "popup/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@simplelogin"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
