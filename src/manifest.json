{
  "name": "SimpleLogin | Your anti-spam superhero",
  "description": "Open source email alias solution",
  "version": null,
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "contextMenus",
    "https://*.simplelogin.io/*"
  ],
  "browser_action": {
    "default_title": "simplelogin-extension",
    "default_popup": "popup/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@simplelogin"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content_script/input_tools.js"],
      "css": ["content_script/input_tools.css"],
      "all_frames": true
    }
  ]
}
